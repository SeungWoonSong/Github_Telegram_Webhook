# Telegram Bot Token
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Default chat ID (used for events not specified in EVENT_CHAT_MAPPING)
TELEGRAM_DEFAULT_CHAT_ID=-1001234567890

# Event to Chat ID mapping (JSON format)
# Format: {"event_type": "chat_id"}
# Example: {"issues,issue_comment": "-1001111111111", "push,pull_request": "-1002222222222", "discussion,discussion_comment": "-1003333333333"}
EVENT_CHAT_MAPPING={}

# Server URL for Telegram webhook (must be HTTPS)
# Example: https://your-domain.com
# For development without HTTPS, set DEVELOPMENT=true and use /get_chat_id command
SERVER_URL=

# Development mode (set to true to skip webhook setup and use /get_chat_id command)
DEVELOPMENT=false
