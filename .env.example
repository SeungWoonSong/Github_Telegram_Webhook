# Telegram Bot Token
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Telegram Bot Username (without @ symbol)
TELEGRAM_BOT_USERNAME=your_bot_username_here

# Default chat ID (used for events not specified in EVENT_CHAT_MAPPING)
TELEGRAM_DEFAULT_CHAT_ID=-1001234567890

# Event to Chat ID mapping (JSON format)
# Format: {"event_type": "chat_id"}
# Example: {"issues,issue_comment": "-1001111111111", "push,pull_request": "-1002222222222", "discussion,discussion_comment": "-1003333333333"}
EVENT_CHAT_MAPPING={}

# Server configuration
SERVER_PORT=8080  # Optional, defaults to 8080 if not set
DEVELOPMENT_MODE=false

# Server URL (optional)
# If not set, external IP will be used
# Example: your-domain.com or subdomain.your-domain.com
SERVER_URL=
